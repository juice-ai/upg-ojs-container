<IfModule mod_rewrite.c>
  RewriteEngine On

  # The following rule is required to make restful_urls work.
  # It routes all requests for non-existent files or directories
  # to the main index.php handler.
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^(.*)$ index.php/$1 [QSA,L]

</IfModule>